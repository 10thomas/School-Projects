public class Truck extends Vehicle
{
  String vehicleType = "Truck";
  String vehicleColor = "Gray";
  int xVal = 25;
  int yVal = 40;
  Truck()
  {
    updateVehicle(xVal,yVal, vehicleType, vehicleColor);
  }
  String type()
  {
    return vehicleType;
  }
  int xVal()
  {
    return xVal;
  }
  int yVal()
  {
    return yVal;
  }
  void changeDirection()
  {
    int temp = xVal;
    xVal = yVal;
    yVal = temp;
  }
}